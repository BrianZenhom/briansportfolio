  <style>
    * {
      text-decoration: none;
      list-style: none;
    }
    .noise-container {
      position: relative;
      isolation: isolate;
      background-color: #0e1013;
    }
    .noise-panel {
      position: relative;
      isolation: isolate;
      border-width: 1px;
      --tw-border-opacity: 1;
      border-color: rgb(52 56 65 / var(--tw-border-opacity));
      --tw-bg-opacity: 1;
      background-color: rgb(35 38 45 / var(--tw-bg-opacity));
      --tw-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1),
        0 8px 10px -6px rgb(0 0 0 / 0.1);
      --tw-shadow-colored: 0 20px 25px -5px var(--tw-shadow-color),
        0 8px 10px -6px var(--tw-shadow-color);
      box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
        var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
    }
    .noise-panel:before {
      position: absolute;
      inset: 0;
      z-index: -20;
      opacity: 0.4;
      mix-blend-mode: overlay;
      content: "";
      background-image: url(/noise.webp);
    }
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
    a {
      color: inherit;
      text-decoration: inherit;
    }
    main::before {
      position: absolute;
      aspect-ratio: 1 / 1;
      width: 100%;
      background-repeat: repeat;
      content: "";
      background-size: 20px 20px;
      background-image: linear-gradient(
          to right,
          rgb(35 38 45) 1px,
          transparent 1px
        ),
        linear-gradient(to bottom, rgb(35 38 45) 1px, transparent 1px);
      -webkit-mask-image: linear-gradient(to bottom, white, transparent);
      mask-image: linear-gradient(to bottom, white, transparent);
      z-index: -1;
    }
    .hero::before {
      position: absolute;
      content: "";
      height: 50vw;
      width: 100vw;
      top: 50%;
      translate: 0 -30%;
      left: -60vw;
      background: url(/noise.webp) repeat,
        linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
      background-blend-mode: overlay;
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
      z-index: 0;
    }
    .hero::after {
      position: absolute;
      content: "";
      height: 50vw;
      width: 100vw;
      top: 50%;
      translate: 0 -30%;
      right: -60vw;
      background: url(/noise.webp) repeat,
        linear-gradient(247.23deg, #d9d7ff 0%, #2f4cb3 100%);
      background-blend-mode: overlay;
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
      z-index: 0;
    }
    .noise {
      z-index: -20;
      position: absolute;
      inset: 0;
      background-image: url(/noise.webp);
      opacity: 0.4;
      mix-blend-mode: overlay;
      pointer-events: none;
    }
    .backgrounds:last-of-type:after {
      position: absolute;
      content: "";
      height: 50vw;
      width: 100vw;
      bottom: 0;
      translate: 0 70%;
      left: 0;
      background: url(/noise.webp) repeat,
        linear-gradient(266.93deg, #fbf6cd 0%, #ff7c5400 100%);
      background-blend-mode: overlay;
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.8), transparent 60%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.8), transparent 60%);
      z-index: -1;
    }
  </style>
