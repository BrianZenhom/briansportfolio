---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import IconDownload from "../components/IconDownload.astro";
import IconCV from "../components/IconCV.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import Aboutme from "../components/Aboutme.astro";
import Contactme from "../components/Contactme.astro";
---

<Layout title="Brian Zenhom">
  <Header class="top-0" />
  <div class="noise"></div>
  <main
    id="main"
    class="relative noise-container w-full h-screen flex flex-1 flex-col overflow-x-hidden"
  >
    <div id="intro">
      <div class="hero pt-24 items-center h-screen flex flex-col max-sm:pt-0">
        <article
          class="grid gap-x-20 grid-cols-2 pb-5 items-center justify-center max-sm:block max-sm:grid-rows-1 max-sm:grid-cols-1"
        >
          <div
            class="flex items-center justify-end max-sm:justify-center max-sm:px-[18vw] max-sm:pt-[18vw]"
          >
            <div>
              <h1
                class="ml-[-4px] text-white pt-40 text-7xl font-extrabold max-sm:pt-20 max-sm:text-[32px]"
              >
                Brian Zenhom
              </h1>
              <h1
                class="text-white text-5xl mt-0 tracking-[.020em] font-black max-sm:text-[21px]"
              >
                <b
                  class="bg-gradient-to-r from-mainColor to-blue-300 text-transparent bg-clip-text font-black ml-[-2px]"
                >
                  FullStack</b
                > Developer
              </h1>
              <h2 class="text-white text-2xl pb-10 max-sm:text-base">
                en <b>Vitoria-Gasteiz</b>, Espa√±a.
              </h2>

              <h2 class="text-white text-2xl max-sm:text-base">
                <b>9+</b> Years Graphic Designing.<br /><b>2+</b> Years Web Developing.
              </h2>
              <p class="text-white text-base pt-8 max-sm:text-xs">
                Building my version of the web.
                <br />Improving my skills through continuous learning.
              </p>
            </div>
          </div>
          <div
            class="md:bg-transparent flex items-center justify-end max-sm:justify-center"
          >
            <div
              class="relative flex justify-end animated show max-sm:max-w-lg"
            >
              <img
                height="600"
                width="500"
                class="object-cover z-50 bg-clip-border rounded-3xl max-sm:w-64"
                src="/me4.webp"
                alt="Brian Zenhom good face"
              />
              <div
                class="rounded-3xl bg-gradient-to-r from-blue-600 to-blue-300 transition-all duration-300 ease-in-out group-hover:duration-200 animate-tilt w-full aspect-video z-0 absolute bottom-0 blur"
              >
              </div>
              <div
                class="rounded-3xl bg-bg-color w-full aspect-video z-30 absolute bottom-0"
              >
              </div>
            </div>
          </div>
          <footer class="z-30 pt-48 justify-center col-span-2 max-sm:pt-10">
            <div class="grid gap-8 items-start justify-center">
              <div class="relative group">
                <div
                  class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-300 rounded-lg blur opacity-75 group-hover:opacity-100 ease-in-out transition duration-700 group-hover:duration-200 animate-tilt"
                >
                </div>
                <button
                  class="relative px-7 py-4 bg-bg-color rounded-lg leading-none flex items-center divide-x divide-gray-600 max-sm:px-5 max-sm:py-2"
                >
                  <span class="flex items-center space-x-5">
                    <IconCV />
                    <span class="pr-6 text-gray-100 font-bold max-sm:text-xs"
                      >Download CV</span
                    >
                  </span>
                  <span
                    class="pl-6 text-gray-100 group-hover:text-gray-100 transition duration-200"
                    ><IconDownload /></span
                  ></button
                >
              </div>
            </div>
          </footer>
        </article>
      </div>
    </div>

    <div id="projects">
      <Projects />
    </div>
    <div id="aboutme">
      <Aboutme />
    </div>
    <div id="experience">
      <Experience />
    </div>
    <div id="services">
      <Contactme />
    </div>
  </main>
</Layout>

<style>
  ::-webkit-scrollbar-track {
    background: none;
  }
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
    overflow-y: hidden;
  }
  body {
    color: white;
    overflow-y: hidden;
    margin: 0;
    line-height: inherit;
  }
  *,
  :before,
  :after {
    text-decoration: none;
    list-style: none;
    box-sizing: border-box;
    border-width: 0;
    border-style: solid;
    border-color: #e5e7eb;
    scroll-behavior: smooth;
  }
  .noise-container {
    isolation: isolate;
    background-color: #17191e;
  }
  .noise-panel {
    position: relative;
    isolation: isolate;
    border-width: 1px;
    --tw-border-opacity: 1;
    border-color: rgb(52 56 65 / var(--tw-border-opacity));
    --tw-bg-opacity: 1;
    background-color: rgb(35 38 45 / var(--tw-bg-opacity));
    --tw-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1),
      0 8px 10px -6px rgb(0 0 0 / 0.1);
    --tw-shadow-colored: 0 20px 25px -5px var(--tw-shadow-color),
      0 8px 10px -6px var(--tw-shadow-color);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
      var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
  }
  .noise-panel:before {
    position: absolute;
    inset: 0;
    z-index: -20;
    opacity: 0.4;
    mix-blend-mode: overlay;
    content: "";
    background-image: url(/noise.webp);
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  a {
    color: inherit;
    text-decoration: inherit;
  }
  main::before {
    position: absolute;
    aspect-ratio: 1 / 1;
    width: 100%;
    background-repeat: repeat;
    content: "";
    background-size: 20px 20px;
    background-image: linear-gradient(
        to right,
        rgb(35 38 45) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(35 38 45) 1px, transparent 1px);
    -webkit-mask-image: linear-gradient(to bottom, white, transparent);
    mask-image: linear-gradient(to bottom, white, transparent);
    z-index: -1;
  }
  .hero::before {
    position: absolute;
    content: "";
    height: 90vw;
    width: 100vw;
    top: 50%;
    translate: 0 -30%;
    left: -60vw;
    background: url(/noise.webp) repeat,
      linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    background-blend-mode: overlay;
    -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
    mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
    z-index: -1;
  }
  .hero::after {
    position: absolute;
    content: "";
    height: 90vw;
    width: 100vw;
    top: 50%;
    translate: 0 -30%;
    right: -60vw;
    background: url(/noise.webp) repeat,
      linear-gradient(247.23deg, #d9d7ff 0%, #2f4cb3 100%);
    background-blend-mode: overlay;
    -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
    mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
    z-index: -1;
  }
  .noise {
    z-index: -20;
    position: absolute;
    inset: 0;
    background-image: url(/noise.webp);
    opacity: 0.4;
    mix-blend-mode: overlay;
    pointer-events: none;
  }
  .backgrounds:last-of-type:after {
    position: absolute;
    content: "";
    height: 50vw;
    width: 100vw;
    bottom: 0;
    translate: 0 80%;
    background: url(/noise.webp) repeat,
      linear-gradient(266.93deg, #f8e42e 0%, #ff7d54 100%);
    background-blend-mode: overlay;
    -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.8), transparent 60%);
    mask-image: radial-gradient(rgba(0, 0, 0, 0.8), transparent 60%);
    z-index: -1;
  }
  @media screen and (max-width: 640px) {
    .hero::before {
      position: absolute;
      content: "";
      height: 90vw;
      width: 100vw;
      top: 20%;
      translate: 0 -30%;
      left: -60vw;
      background: url(/noise.webp) repeat,
        linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
      background-blend-mode: overlay;
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.4), transparent 65%);
      z-index: -1;
    }
    .hero::after {
      position: absolute;
      content: "";
      height: 90vw;
      width: 100vw;
      top: 20%;
      translate: 0 -30%;
      right: -60vw;
      background: url(/noise.webp) repeat,
        linear-gradient(247.23deg, #d9d7ff 0%, #2f4cb3 100%);
      background-blend-mode: overlay;
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.5), transparent 65%);
      z-index: -1;
    }
  }
</style>
