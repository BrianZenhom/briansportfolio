<div
  class="container snap-center pt-32 relative max-w-[1160px] h-screen mr-auto ml-auto max-sm:px-[18vw] z-40"
>
  <h2 class="text-white font-black text-2xl text-left max-sm:text-base">
    Send me a message!
  </h2>
  <span class="text-white font-normal max-sm:text-xs"
    >Got a question or proposal, or just want to say hello? Go ahead.</span
  >
  <div
    class="grid grid-cols-2 gap-x-20 place-items-start pt-10 w-3/4 mr-auto ml-auto"
  >
    <div class="pt-10 w-full">
      <div class="form__group field">
        <input type="text" class="form__field" placeholder="Name" required="" />
        <label for="name" class="form__label">Name</label>
      </div>
    </div>

    <div class="pt-10 w-full">
      <div class="form__group field">
        <input
          type="email"
          class="form__field"
          placeholder="email"
          required=""
        />
        <label for="Email" class="form__label">Email</label>
      </div>
    </div>
    <div class="pt-10 col-span-2 w-full">
      <div class="form__group field">
        <textarea
          class="form__field"
          placeholder="Hi, I think we need a design system for our products at Company X. How soon can you hop on to discuss this?"
          required="required"
          rows="3"
          minlength="20"></textarea>
        <label for="name" class="form__label">Message</label>
      </div>
    </div>
  </div>

  <style>
    .form__group {
      position: relative;
      padding: 20px 0 0;
      width: 100%;
    }

    .form__field {
      font-family: inherit;
      width: 100%;
      border: none;
      border-bottom: 2px solid #9b9b9b;
      outline: 0;
      font-size: 17px;
      color: #2f4cb3;
      padding: 7px 0;
      background: transparent;
      transition: border-color 0.2s;
    }

    .form__field::placeholder {
      color: transparent;
    }

    .form__field:placeholder-shown ~ .form__label {
      font-size: 17px;
      cursor: text;
      top: 20px;
    }

    .form__label {
      position: absolute;
      top: 0;
      display: block;
      transition: 0.2s;
      font-size: 17px;
      color: #9b9b9b;
      pointer-events: none;
    }

    .form__field:focus {
      padding-bottom: 6px;
      font-weight: 700;
      border-width: 3px;
      border-image: linear-gradient(to right, #2f4cb3, #fff);
      border-image-slice: 1;
    }

    .form__field:focus ~ .form__label {
      position: absolute;
      top: 0;
      display: block;
      transition: 0.2s;
      font-size: 17px;
      color: #2f4cb3;
      font-weight: 700;
    }

    /* reset input */
    .form__field:required,
    .form__field:invalid {
      box-shadow: none;
    }
    .form__field[type="text"],
    .form__field[type="email"] {
      border: 1;
      padding-left: 0;
      position: relative;
      color: #2f4cb3;
    }
    .form__field textarea {
      color: #2f4cb3;
    }
  </style>
</div>
